{
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "strict": true,
        "declaration": true,
        "outDir": "./build/",
        "baseUrl": "./src/",
        "paths": {
            "@Data/*": ["data/*"],
            "@Interfaces/*": ["interfaces/*"],
            "@Server/*": ["server/*"],
            "@Utils/*": ["utils/*"]
        }
    },
    "exclude": [
        "./node_modules/"
    ],
    "include": [
        "./src/"
    ]
}